
<h1>Tickets</h1>

<table class="table table-dark table-hover">
  <thead>
  <tr>
    <th scope="col">Ticket Number</th>
    <th scope="col">Ticket Status</th>
    <th scope="col">Subject</th>
    <th scope="col">Description</th>
    <th scope="col">User</th>
    <th scope="col">View</th>
    <th scope="col">Edit</th>
    <th scope="col">Delete</th>
    <th scope="row"></th>
  </tr>
  </thead>
  <tbody>
    <% @tickets.each do |t| %>
      <tr>
        <td><%= t.ticket_number %></td>
        <td><%= t.ticket_status %></td>
        <td><%= t.subject %></td>
        <td><%= t.description %></td>
        <td><%= t.user_id %></td>
        <td><%= link_to 'Show', ticket_path(t.id) %></td>
        <td><%= link_to 'Edit', edit_ticket_path(t.id) %></td>
        <td><%= button_to 'Destroy', t , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="m-1 btn btn-warning">
<%= link_to 'New Ticket', new_ticket_path %>
</button>


