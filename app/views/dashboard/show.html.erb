<h1>User Profile Page</h1>
<p>Hello,<%= @user.first_name %></p>

<h3>Tickets List</h3>
<table class="table table-dark table-hover">
  <thead>
  <tr>
    <th scope="col">Ticket Number</th>
    <th scope="col">Ticket Status</th>
    <th scope="col">Subject</th>
    <th scope="col">Description</th>
    <th scope="col">User</th>
    <th scope="col">View</th>
    <th scope="col">Edit</th>
    <th scope="row"></th>
  </tr>
  </thead>
  <tbody class="mt-2 p-3">
  <% @tickets.each do |t| %>
    <tr>
      <td><%= t.ticket_number %></td>
      <td><%= t.ticket_status %></td>
      <td><%= t.subject %></td>
      <td><%= t.description %></td>
      <td><%= t.user_id %></td>
      <td><%= link_to 'Show', ticket_path(t.id) %></td>
      <td><%= link_to 'Edit', edit_ticket_path(t.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>



<button type="button" class="m-1 btn btn-warning">
  <%= link_to 'New Ticket', new_ticket_path(@tickets) %>
</button>




