<h1>User Profile Page</h1>
<p>Hello,<%= @user.first_name %></p>

<h3>Tickets List</h3>
<table>
  <thead>
  <tr>
    <th>Ticket</th>
    <th>Subject</th>
    <th>Description</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |t| %>
    <tr>
      <td><%= t.ticket_number %></td>
      <td><%= t.subject %></td>
      <td><%= t.description %></td>
      <td><%= t.user_id %></td>
      <td><%= link_to 'Show', ticket_path(t.id) %></td>
      <td><%= link_to 'Edit', edit_ticket_path(t.id) %></td>
      <td><%= button_to 'Destroy', t , method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>


